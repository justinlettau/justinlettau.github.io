---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Support">
  <main class="min-h-screen bg-neutral-900 text-white">
    <div class="container mx-auto">
      <section class="p-8 lg:p-20">
        <h1 class="text-5xl font-bold leading-none mb-4">
          Feedback and Support
        </h1>
        <p class="mb-10">
          Feel free to send feature requests, questions, or bugs.
        </p>

        <form
          action="https://formspree.io/f/xldrnrwy"
          method="POST"
          class="max-w-3xl"
        >
          <div class="mb-6">
            <label for="email" class="block mb-2 text-sm font-medium">
              Email
            </label>
            <input
              type="email"
              id="email"
              class="text-sm rounded-lg block w-full p-3 bg-gray-700 border-gray-600 text-white focus:ring-blue-500 focus:border-blue-500"
              required
            />
            <span class="text-xs">Only used for replying to you.</span>
          </div>
          <div class="mb-6">
            <label
              for="message"
              class="block mb-2 text-sm font-medium text-white"
            >
              Message
            </label>
            <textarea
              name="message"
              id="message"
              rows="5"
              class="text-sm rounded-lg block w-full p-3 bg-gray-700 border-gray-600 text-white focus:ring-blue-500 focus:border-blue-500"
              required></textarea>
          </div>
          <button
            type="submit"
            class="flex items-center gap-2 rounded-md bg-zinc-800 px-6 py-3 text-neutral-300 transition-colors hover:bg-zinc-700"
          >
            Send feedback
          </button>
        </form>
      </section>
    </div>
  </main>
</Layout>
